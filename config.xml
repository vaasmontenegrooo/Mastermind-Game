<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "MasterMind"
    versionCode = "1"
    version     = "1.0.0" >
  <name>MasterMind</name>

  <description>
    MasterMind game
  </description>

  <author>
    Mateusz Burnetko Konrad Luzarowski
  </author>
    <platform name="android" />
  <splash platform="android" qualifier="port-ldpi" src="img/android/ldpi/splashscreen.9.png" />
  <splash platform="android" qualifier="port-mdpi" src="img/android/mdpi/splashscreen.9.png" />
  <splash platform="android" qualifier="port-hdpi" src="img/android/hdpi/splashscreen.9.png" />
  <splash platform="android" qualifier="port-xhdpi" src="img/android/xhdpi/splashscreen.9.png" />
  <splash src="splash.9.png" />
  <preference name="SplashScreenDelay" value="5000" />
  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="true" />
  <preference name="SplashMaintainAspectRatio" value="false" />
  <plugin name="cordova-plugin-device" spec="~1.1.4" />
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
  <plugin name="cordova-plugin-splashscreen" source="npm" />
  <icon src="img/MM_Icon.png" />
</widget>